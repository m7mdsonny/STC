{
  "project_name": "STC AI-VAP Platform",
  "project_type": "SaaS Platform",
  "description": "منصة SaaS متكاملة لتحليل الفيديو بالذكاء الاصطناعي - AI Video Analysis Platform",
  "tech_stack": {
    "frontend": {
      "framework": "React 18.3",
      "language": "TypeScript",
      "build_tool": "Vite 5.4",
      "routing": "React Router DOM 7.10",
      "state_management": "@tanstack/react-query 5.90",
      "styling": "Tailwind CSS 3.4",
      "ui_components": "Custom components with Lucide React icons",
      "dev_port": 5173
    },
    "backend": {
      "framework": "Laravel 11",
      "language": "PHP 8.2+",
      "authentication": "Laravel Sanctum 4.0",
      "database": "MySQL 8.0+ / MariaDB 10.3+",
      "api_version": "v1",
      "dev_port": 8000
    },
    "edge_server": {
      "framework": "Python FastAPI",
      "language": "Python 3.10+",
      "features": ["OpenCV", "FFmpeg", "AI Model Processing"]
    },
    "mobile": {
      "framework": "Flutter 3.16+",
      "language": "Dart"
    }
  },
  "authentication": {
    "method": "Laravel Sanctum Bearer Token",
    "endpoints": {
      "login": "POST /api/v1/auth/login",
      "logout": "POST /api/v1/auth/logout",
      "get_current_user": "GET /api/v1/auth/me",
      "update_profile": "PUT /api/v1/auth/profile",
      "change_password": "PUT /api/v1/auth/password"
    },
    "token_storage": "localStorage (frontend)",
    "session_management": "Token-based with Sanctum"
  },
  "role_based_access_control": {
    "roles": [
      {
        "name": "super_admin",
        "level": 5,
        "description": "Full system access, can manage all organizations",
        "arabic_label": "مشرف عام"
      },
      {
        "name": "owner",
        "level": 4,
        "description": "Organization owner with full access to their organization",
        "arabic_label": "مالك"
      },
      {
        "name": "admin",
        "level": 3,
        "description": "Organization administrator with management permissions",
        "arabic_label": "مدير"
      },
      {
        "name": "editor",
        "level": 2,
        "description": "Can edit content but not manage organization",
        "arabic_label": "محرر"
      },
      {
        "name": "viewer",
        "level": 1,
        "description": "Read-only access",
        "arabic_label": "مشاهد"
      }
    ],
    "permissions": {
      "super_admin": "Access to all admin routes and system management",
      "owner": "Full organization management, team management, settings",
      "admin": "Organization management, team management, settings",
      "editor": "Can edit content, view all pages",
      "viewer": "Read-only access to all organization pages"
    },
    "route_protection": {
      "admin_only_routes": [
        "/admin",
        "/admin/monitor",
        "/admin/organizations",
        "/admin/users",
        "/admin/licenses",
        "/admin/edge-servers",
